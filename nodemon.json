{
  "watch": ["src"],
  "ext": "js,json,ts",
  "exec": "node -r ts-node/register src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  }
}
